{
    // "extends": "@tsconfig/node/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./", 
        "paths": {
            "*": ["src/*", "*"]
        },
        "outDir": "dist",     // Compoiled files (javascript) will be in dist folder
        "target": "esnext",   // Use the newset javascript features
        "module": "ESNext",   // Use the newset module system
        "moduleResolution": "node", 
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}
